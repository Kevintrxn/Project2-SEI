<!DOCTYPE html>
<html>
  <head>
    <title>venue.Me</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <% include partials/header %>
  <body>
    <h1>venue.Me</h1>
    <p>An easy way to share your venue experience with friends!</p>
    <% if (events && events.length > 0) { %>
      <% events.forEach(function(event) { %>
        <div class="event">
          <h2><%= event.eventName %></h2>
          <h3><%= event.user.name %></h3>
          <p>Location: <%= event.eventLocation %></p>
          <p>Date: <%= new Date(event.eventDate).toISOString().split('T')[0] %></p>
          <p>Rating: <%= event.rating %></p>
          <p>Overall Experience: <%= event.experience %></p>
          <p>Review: <%= event.reviewText %></p>
          <% if (user && event.user.equals(user._id)) { %>
            <form action="/venue/events/edit/<%= event._id %>" method="get">
              <button type="submit">Edit</button>
            </form>
            <form action="/venue/events/delete/<%= event._id %>?_method=DELETE" method="post">
              <button type="submit">Delete</button>
            </form>
          <% } %>
        </div>
      <% }) %>
    <% } else { %>
      <p>No events to display.</p>
    <% } %>
  </body>
</html>
